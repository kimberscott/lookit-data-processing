<div class="col-md-12">
  <div class="thumbnail">
    <div class="caption">

      <!-- Title -->
      <h3>{{experiment.title}}</h3>

      <!-- Study Info -->
      <div class="study-feedback-experiment-info">

          <div class="study-feedback-thumbnail-wrapper">
            {{#if experiment.thumbnail.raw}}
              <img class="study-feedback-thumbnail" src="{{experiment.thumbnail.raw}}" />
            {{else}}
              <div class="study-list-placeholder">
                <i class="fa fa-picture-o "></i>
              </div>
            {{/if}}
          </div>

          <div class="study-feedback-description-wrapper">
            {{experiment.description}}
            <div>
              <strong>Age Range: </strong>{{experiment.ageRange}}<br>
              <strong>Duration: </strong>{{experiment.duration}}
            </div>
	  </div>
      </div>


      <!-- Sessions -->
      <h4 class="study-feedback-label">Experiment Sessions</h4>

      <div class="row">
        <div class="col-md-3">
          <strong>Child</strong>
        </div>
        <div class="col-md-3">
          <strong>Date</strong>
        </div>
        <div class="col-md-6">
          <strong>Feedback</strong>
        </div>
      </div>

      <!-- each session -->
      {{#each sessions as |session|}}
        {{study-feedback-text session=session account=account}}
      {{/each}}
    </div>

  </div>
</div>
